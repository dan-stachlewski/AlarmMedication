<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageProfileView"
            android:layout_alignParentTop="true"
            android:background="#e60000"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/adduser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            />

        <EditText
            android:id="@+id/editFirstName"
            android:layout_below="@+id/imageProfileView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />
        <EditText
            android:id="@+id/editLastName"
            android:layout_below="@+id/editFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />
        <EditText
            android:id="@+id/editBloodGroup"
            android:layout_below="@+id/editLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Blood Group"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />
        <EditText
            android:id="@+id/editContactNumber"
            android:layout_below="@+id/editBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />
        <EditText
            android:id="@+id/editDOB"
            android:layout_below="@+id/editContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />
        <EditText
            android:id="@+id/editEmailAddress"
            android:layout_below="@+id/editDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />

        <Button
            android:id="@+id/buttonAddProfile"
            android:layout_below="@id/editEmailAddress"
            android:layout_centerHorizontal="true"
            android:text="Save Profile" style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/buttonViewProfile"
            android:layout_below="@+id/buttonAddProfile"
            android:layout_centerHorizontal="true"
            android:text="View Profile" style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</ScrollView>